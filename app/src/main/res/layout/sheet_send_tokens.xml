<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_token_inr"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiving address"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_receiving_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Recipient address"
            android:layout_marginTop="10dp"
            android:background="@drawable/basic_edit_text_background"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount"
            android:layout_marginTop="10dp"
            android:background="@drawable/basic_edit_text_background"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token (Click to Change)"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_token_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="USDT"
            android:layout_marginTop="10dp"
            android:background="@drawable/basic_button"
            android:backgroundTint="#EAEAEA"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source Chain (Click to Change)"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_source_chain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Polygon"
            android:layout_marginTop="10dp"
            android:background="@drawable/basic_button"
            android:backgroundTint="#EAEAEA"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination Chain (Click to Change)"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_destination_chain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Linea"
            android:layout_marginTop="10dp"
            android:background="@drawable/basic_button"
            android:backgroundTint="#EAEAEA"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="5dp" />

        <Button
            android:id="@+id/button_send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Send"
            android:layout_marginTop="30dp"
            android:background="@drawable/basic_button"
            android:backgroundTint="#EAEAEA"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="5dp" />

    </LinearLayout>

</RelativeLayout>