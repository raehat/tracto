<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_token_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 MATIC"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/basicColor"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/text_view_token_inr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_token_amt"
        android:text="618 INR"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#7C7C7C"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_token_inr"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiving address"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Recipient address"
            android:layout_marginTop="10dp"
            android:background="@drawable/basic_edit_text_background"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount"
            android:layout_marginTop="10dp"
            android:background="@drawable/basic_edit_text_background"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token (Click to Change)"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_token_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="USDT"
            android:layout_marginTop="10dp"
            android:background="@drawable/basic_button"
            android:backgroundTint="#EAEAEA"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="5dp" />

    </LinearLayout>

</RelativeLayout>