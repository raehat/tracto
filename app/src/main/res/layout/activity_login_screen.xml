<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen">

    <TextView
        android:id="@+id/text_view_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:textSize="24sp"
        android:textColor="@color/basicColor"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can either log in using metamask or google account. To login with metamask, however, you'll need to install the metamask app"
        android:layout_below="@id/text_view_welcome"
        android:layout_marginTop="10dp"
        android:textColor="@color/basicColor"
        android:layout_marginHorizontal="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingVertical="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="100dp">

        <Button
            android:id="@+id/button_login_using_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/google"
            android:paddingLeft="20dp"
            android:drawablePadding="-45dp"
            android:background="@drawable/basic_button"
            android:layout_marginHorizontal="30dp"
            android:text="Login using Google Account"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/basic_button"
            android:drawableLeft="@drawable/metamask_icon"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:drawablePadding="-80dp"
            android:layout_marginHorizontal="30dp"
            android:text="Login using Metamask"/>


    </LinearLayout>

</RelativeLayout>
