<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginVertical="8dp">

    <TextView
        android:id="@+id/tx_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 ausdc sent to 0xjdhbcdndd from polygon to linea"
        android:layout_marginTop="10dp"
        android:textColor="@color/basicColor"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/revert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REVERT TRANSACTION"
        android:layout_marginTop="10dp"
        android:background="@drawable/basic_button"
        android:paddingHorizontal="20dp"
        android:layout_below="@id/tx_text"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>