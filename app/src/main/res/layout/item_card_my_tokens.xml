<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/text_view_token_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/polygon_matic_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text_view_token_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token Name"
            android:layout_marginLeft="80dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/basicColor"/>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_token_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 MATIC"
                android:textSize="20sp"
                android:textColor="@color/basicColor"/>

            <TextView
                android:id="@+id/text_view_token_inr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="184 INR"
                android:textSize="16sp"
                android:textColor="@color/basicColor"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>